<h1>Rooms</h1>

<h4>All</h4>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Channel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.description %></td>
        <td><%= room.channel %></td>
        <td><%= link_to 'Show', channel_room_path(room.channel, room) %></td>
        <td><%= link_to 'Edit', edit_channel_room_path(room.channel, room) %></td>
        <td><%= link_to 'Destroy', channel_room_path(room.channel, room), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

